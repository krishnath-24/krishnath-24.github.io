<h2>Codeial : <%= title %></h2>

<div id="container">
    <section id="feed-posts">

        <h4>Posts</h4>
        <% if(locals.user) { %>
            <form action="/posts/create-post" method="POST" id="new-post-form">
                <textarea required name="content" id="post" cols="30" rows="3" placeholder="Add post here..."></textarea>
                <input type="submit" name="Post" >
            </form>
        <% } %>

        <div id="post-list-container">

            <ul>
                <% for(post of posts) {%>

                <%- include('_Post') -%>

                <% } %>
            </ul>

        </div>
    
    </section>
    
    <section id="user-friends">
    
        <h4>Friends</h4>
    
        <% for(user of all_users) { %>
    
            <p>
                <a href="/user/profile/<%= user.id %>"><%= user.name %></a>
            </p>
        <% } %>
    </section>
    
</div>

<script src="/js/home_post.js"></script>
<script src="/js/home_comment.js"></script>