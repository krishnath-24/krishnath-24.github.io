<div class="container">
    <h2>Codeial : <%= title %></h2>

<section id="feed-posts">

    <h4>Posts</h4>
    <% if(locals.user) { %>
        <form action="/posts/create-post" method="POST" id="new-post-form">
            <textarea name="content" id="post" cols="30" rows="3" placeholder="Add comment here..."></textarea>
            <input type="submit" value="Post">
        </form>
    <% } %>

    <% if(posts) { %>

        <% posts.forEach(post =>{ %>

            <h3 class="text-primary"><%=post.content%></h3>
            <p><%= post.user.name %></p>
            <%   post.comment.forEach(comment => { %>
                    <p><%= comment.content %></p> <strong><span><%= comment.user.name%></span></strong>
            <%   }); %>

            <form action="/comment/<%= post.id %>/create" method="POST" class="form-inline">
                
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputComment" class="sr-only">Comment</label>
                  <input type="text" class="form-control" id="inputComment" placeholder="comment" name="content">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
              </form>
        <% }) %>

    <% } else { %>
        <h4 class="text-secondary">No posts yet!</h4>
    <% } %>


</section>

</div>