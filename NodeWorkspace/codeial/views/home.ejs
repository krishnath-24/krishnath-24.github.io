<h2>Codeial : <%= title %></h2>

<section id="feed-posts">

    <h4>Posts</h4>
    <form action="/posts/create-post" method="POST" id="new-post-form">
        <textarea name="content" id="post" cols="30" rows="3" placeholder="Add comment here..."></textarea>
        <input type="submit" value="Post">
    </form>

    <% if(posts) { %>

        <% posts.forEach(post =>{ %>

            <h3 class="text-primary"><%=post.content%></h3>
            <p><%= post.user.name %></p>
        <% }) %>

    <% } else { %>
        <h4 class="text-secondary">No posts yet!</h4>
    <% } %>


</section>
